
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>组件注册</title>
    <script src="~/Scripts/vue.min.js"></script>
</head>
<body>
    <div id="v">
        <com-a></com-a>
    </div>
    <div id="v1">
        <com-b></com-b>
    </div>
    <script>
        var componentA =
        {
            data: function () {
                return {
                    count: 0,
                }
            },
            template: '<button v-on:click="++count">已经点击了{{count}}次</button>',
        };
        var componentB =
        {
            data: function () {
                return {
                    count: 0,
                }
            },
            template: '<button v-on:click="count=count+10">{{count}}次</button>',
        };

        new Vue({
            el: '#v',
            data: {
            },
            methods: {
            },
            components: {
                'com-a':componentA,
            },
        });
        new Vue({
            el: '#v1',
            data: {
            },
            methods: {
            },
            components: {
                'com-b': componentB,
            },
        });
    </script>
</body>
</html>
