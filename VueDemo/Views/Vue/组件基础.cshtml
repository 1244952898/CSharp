
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>组件基础</title>
    <script src="~/Scripts/vue.min.js"></script>
</head>
<body>
    <div id="v"> 
        <btn-count></btn-count>
    </div>
    <script>
        Vue.component('btn-count', {
            data: function () {
                return {
                    count: 0,
                }
            },
            template: '<button v-on:click="++count">已经点击了{{count}}次</button>',
        });
        new Vue({ el: '#v' });
      
    </script>
</body>
</html>
