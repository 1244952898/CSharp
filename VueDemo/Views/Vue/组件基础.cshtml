
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>组件基础</title>
    <script src="~/Scripts/vue.min.js"></script>
</head>
<body>
    <div id="v"> 
        <div>
            <btn-count></btn-count>
            <btn-count></btn-count>
        </div>
        <div>
            <post v-for="post in posts" :title="post.title" :id="post.id"></post>
        </div>
    </div>
    <script>
        Vue.component('btn-count', {
            data: function () {
                return {
                    count: 0,
                }
            },
            template: '<button v-on:click="++count">已经点击了{{count}}次</button>',
        });
        Vue.component('post', {
            data: function () {

            },
            props: ['title'],
            template:'<h3>{{ title }}</h3>'
        });
        new Vue({
            el: '#v',
            data: {
                posts: [
                    { id: 1, title: 'title1' },
                    { id: 2, title: 'title2' },
                    { id: 3, title: 'title3' },
                    { id: 4, title: 'title4' }]
            },
        });
      
    </script>
</body>
</html>
